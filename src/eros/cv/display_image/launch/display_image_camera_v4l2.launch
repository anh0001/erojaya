<launch>
  	<node pkg="nodelet_gui_manager" type="nodelet_gui_manager" name="standalone_nodelet" output="screen"/>

	<node pkg="nodelet" type="nodelet" name="CameraV4L2" args="load CameraV4L2 standalone_nodelet" output="screen">
		<param name="device" value="/dev/video0" />
		<param name="width" value="640" />
		<param name="height" value="480" />
		<param name="pixel_format" value="yuyv" />
		<param name="configFile" value="$(find camera_v4l2)/launch/cam_settings.yaml" />
		<rosparam command="load" file="$(find camera_v4l2)/launch/cam_params.yaml" />
  	</node>

  	<node pkg="nodelet" type="nodelet" name="CameraDisplay" args="load DisplayImage standalone_nodelet" output="screen">
  	</node>
</launch>
